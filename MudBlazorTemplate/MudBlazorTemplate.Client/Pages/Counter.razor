@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h1" GutterBottom>Counter</MudText>

<MudText Typo="Typo.body1" GutterBottom>Current count: @currentCount</MudText>

<MudButton OnClick="IncrementCount" Color="Color.Primary" Variant="Variant.Filled">Click me</MudButton>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
